<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<!-- 加入一个abstract表示此bean在Spring容器启动的时候，不进行实例化 -->
	<!--
	<bean id="message" class="cn.mldn.mldnspring.service.IMessage" abstract="true"/>
	-->

	<!-- 在Spring容器之中，配置一个程序类（配置的是完整的“包.类”名称，一定采用的是反射） -->
	<!-- 在每一个bean配置之中都提供有一个id的属性，该属性为Spring的查找名称 -->
	<!--
	<bean id="messageImpl" class="cn.mldn.mldnspring.service.impl.MessageImpl" parent="message"/>
	-->
	
	<!-- 在Spring容器之中，配置一个程序类（配置的是完整的“包.类”名称，一定采用的是反射） -->
	<!-- 在每一个bean配置之中都提供有一个id的属性，该属性为Spring的查找名称 -->
	<bean id="messageImpl" class="cn.mldn.mldnspring.service.impl.MessageImpl"/>
	

</beans>
